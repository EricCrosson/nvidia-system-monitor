            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher":[]
        },

        // build and run
        {
            "label": "Build and run",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "./make.sh && ./bin/nvsm"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher":[]
        },

        // build and run with optimus
        {
            "label": "Build and run with optimus",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "./make.sh && optirun ./bin/nvsm"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher":[]
        }
