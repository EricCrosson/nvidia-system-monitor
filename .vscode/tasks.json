{
    "version": "2.0.0",
    "tasks": [

        // build
        {
            "label": "Build",
            "type": "shell",
            "command": "./make.sh",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher":[]
        },

        // run
        {
            "label": "Run",
            "type": "shell",
            "command": "./bin/nvsm",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher":[]
        },

        // run with optimus
        {
            "label": "Run with optimus",
            "type": "shell",
